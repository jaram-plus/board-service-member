# ===========================================
# Docker Compose Environment Variables
# ===========================================
# 이 파일을 복사해서 .env 파일을 만드세요
# cp .env.example .env

# ===========================================
# Spring Boot 기본 설정
# ===========================================
SPRING_PROFILES_ACTIVE=prod
SPRING_APPLICATION_NAME=mopp-service

# ===========================================
# 서버 포트 설정
# ===========================================
SERVER_PORT=8080

# ===========================================
# MySQL 설정 (Docker Compose)
# ===========================================
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_USER=mopp
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_PORT=3306

# ===========================================
# Redis 설정 (Docker Compose)
# ===========================================
REDIS_PORT=6379

# ===========================================
# JPA 설정
# ===========================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_BATCH_FETCH_SIZE=1000

# ===========================================
# JWT 설정
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_ACCESS_TOKEN_EXPIRATIONS=3600000
JWT_REFRESH_TOKEN_EXPIRATIONS=604800000

# ===========================================
# OAuth 설정 (Google)
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://your-domain.com/login/oauth2/code/google

# ===========================================
# Frontend Redirect URL
# ===========================================
REDIRECT_URL=http://your-frontend-domain.com

# ===========================================
# CORS 설정 (필요시)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_EXPOSED_HEADERS=Content-Length,Content-Type
